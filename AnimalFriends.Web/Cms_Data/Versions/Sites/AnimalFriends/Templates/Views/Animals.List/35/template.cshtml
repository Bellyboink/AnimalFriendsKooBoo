<ul  class="list">
  @if(ViewBag.AnimalList != null){
    foreach (var item in ViewBag.AnimalList){
    <li>
        <h3>
          <a class='title' href='@Url.FrontUrl().PageUrl(string.Format("{0}/Detail",""),new { UserKey = item.UserKey})'>@item.Header</a>
 		</h3>
      	@foreach(var file in ContentHelper.SplitMultiFiles(item.Images))
		{
			<img src="@file?width=100" alt=""/>
		}
		<div>
          @Html.Raw(item.Text)
      	</div>
      	@if(!string.IsNullOrEmpty(@item.Phone)){	
      	<span class="contact contact-phone">
        	@item.Phone  
      	</span>
      	}
      	@if(!string.IsNullOrEmpty(@item.Email)){
      	<span class="contact contact-email">
        	@item.Email 
      	</span>
      }
    </li>
    }
  }
</ul>