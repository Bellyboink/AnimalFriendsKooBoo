@if (Model != null)
{ 
<div>
	<h3 class="title" @ViewHelper.Edit(Model,"Header")>@Html.Raw(Model.Header ?? "")</h3>
	<div class="content">
		<div @ViewHelper.Edit(Model,"Text")>@Html.Raw(Model.Text ?? "")</div>
		<div @ViewHelper.Edit(Model,"SortOrder")>@Html.Raw(Model.SortOrder ?? "")</div>
		<div @ViewHelper.Edit(Model,"CssClass")>@Html.Raw(Model.CssClass ?? "")</div>
	</div>
</div>
}