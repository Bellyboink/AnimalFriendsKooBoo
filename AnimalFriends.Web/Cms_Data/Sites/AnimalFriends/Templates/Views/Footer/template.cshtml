<footer id="footer">
  	<ul class="footer-inner">
        @foreach (var item in ViewBag.FooterItems){
        <li class="footer-item footer-item-@item.CssClass" @ViewHelper.Edit(item)>
            <h4>
                @item.Header
			</h4>
          	<div>
                @Html.Raw(item.Text)
            </div>
        </li>
        }
    </ul>
</footer>